  <view wx:for="{{activity}}"  >
    <view class="container">
		    <!-- {{item.turn_id}}{{item.begin_time}}{{item.end_time}}{{item.placeName}}{{item.earlyOrNoon}} -->
				<view class="kuang">
          <view class="item1">
          <text>活动名称</text>{{item.title}}
