/* pages/myRecord/myRecord.wxss */
.myRecord-list{
  padding:15px;
}
.news-item{
  display: flex;
  flex-direction: row;
  border-bottom:1rpx solid black;
  height:120px;
  position:relative;
  border: 1px rgba(0, 0, 0, 0.5) solid;
  border-radius: 5px;
  padding:10px;
  margin-bottom: 50px;
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
}
.news-item .container .img{
  height:100px;
  width:130px;
  margin-right:10px;
}
.title{
  color: rgba(0,0,0,0.7);
  font-weight: 500;
  padding-left: 10px;
}
.rongqi{
  position:relative;
  width: 100%;
}
.time{
  font-size:13px;
  color:rgba(255,0,0 ,0.8);
  padding-top: 5px;
  padding-left: 10px;
}
.fuzhu{
  position: absolute;
  bottom:0;
  height:20px;
  margin-bottom: 10px;

}
.fuzhu li{
  float:left;
  margin-bottom: 10px;
}
.fuzhu .suo{
  width: 20px;
  height: 20px;
}
.fuzhu .person{
  margin-top:2px;
}
.fuzhu .person text{
  font-size: 11px;
  padding-left: 10px;
}
.tuixuan{
  width: 100px;
  border-radius:25px ;
  background-color:rgba(0, 0, 0, 0.5) 2px solid;
  font-weight: 600;
  font-size:16px;
  margin-top:20px;
  margin-left: 420rpx;
}
.tishi{
  text-align: center;
  font-size: 20px;
  font-weight: 3px;
  padding-bottom: 15px;
}